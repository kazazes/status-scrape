{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$tslint5"
      ]
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": [
        "$tsc",
        "$ts-webpack",
        "$tslint-webpack"
      ]
    },
    {
      "type": "npm",
      "script": "watch:ts",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false
      }
    },
    {
      "type": "npm",
      "script": "deploy:prisma",
      "path": "packages/prisma/",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "deploy:gae",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "serve",
      "path": "packages/frontend/",
      "isBackground": true,
      "problemMatcher": [
        "$ts-webpack-watch",
        "$tslint-webpack-watch"
      ]
    }
  ]
}