{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$tslint5"]
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "npm",
      "script": "watch:ts",
      "problemMatcher": ["$tslint5"]
    },
    {
      "type": "npm",
      "script": "watch:ts",
      "path": "packages/scraper/",
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
