{
  "extends": [
    "tslint:latest",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": ["prisma/src/**/*", "**/*prisma*.ts", "**/*.d.ts", "tests/**/*"]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "no-boolean-literal-compare": false,
    "prefer-template": {
      "options": "allow-single-concat"
    }
  }
}
