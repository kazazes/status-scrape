type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
}

type StatusScrapeTarget {
  id: ID! @unique
  name: String! @unique
  twitterHandle: String @unique
  strategy: ScrapeStrategy! @default(value: "STATUSPAGE_IO")
  statusUrl: String! @unique
  companyUrl: String! @unique
  results: [StatusScrapeJob!]! @relation(name: "TargetScrapeRelation")
}

type StatusScrapeJob {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  dom: String
  target: StatusScrapeTarget! @relation(name: "TargetScrapeRelation")
  results: [StatusScrapeResult!]! @relation(name: "ScrapeResultRelation")
  status: ScrapeJobStatus!
}

type StatusScrapeResult {
  scrape: StatusScrapeJob! @relation(name: "ScrapeResultRelation")
  category: String!
  component: String!
  status: SystemStatus!
}
