type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
}

type StatusScrapeTarget {
  id: ID! @unique
  name: String! @unique
  twitterHandle: String @unique
  strategy: ScrapeStrategy! @default(value: "STATUSPAGE_IO")
  statusUrl: String! @unique
  results: [StatusScrape!]! @relation(name: "TargetScrapeRelation")
}

type StatusScrape {
  id: ID! @unique
  createdAt: DateTime!
  failed: Boolean! @default(value: "false")
  dom: String
  target: StatusScrapeTarget! @relation(name: "TargetScrapeRelation")
  results: [StatusScrapeResult!]! @relation(name: "ScrapeResultRelation")
}

type StatusScrapeResult {
  scrape: StatusScrape! @relation(name: "ScrapeResultRelation")
  category: String!
  component: String!
  status: SystemStatus!
}
