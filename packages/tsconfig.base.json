{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // "sourceMap": true,
    "inlineSourceMap": true,
    "lib": ["es2017", "esnext", "dom"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
